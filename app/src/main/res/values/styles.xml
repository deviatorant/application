<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Widget styles -->
    
    <!-- Button styles -->
    <style name="Widget.ModernApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="Widget.ModernApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="Widget.ModernApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.ModernApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- TextInputLayout styles -->
    <style name="Widget.ModernApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- RecyclerView styles -->
    <style name="Widget.ModernApp.RecyclerView" parent="Widget.AppCompat.ListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:padding">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- Switch styles -->
    <style name="Widget.ModernApp.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/primary</item>
        <item name="trackTint">@color/primary_light</item>
    </style>

    <!-- Toolbar styles -->
    <style name="Widget.ModernApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/primary_light</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>